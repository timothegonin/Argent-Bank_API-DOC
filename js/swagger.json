{
  "openapi": "3.1.0",
  "info": {
    "title": "Argent Bank API documentation",
    "description": "Contains all available API endpoints in this codebase",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "localhost:3001/api/v1"
    }
  ],
  "tags": [
    {
      "name": "Accounts",
      "description": "User Accounts API"
    },
    {
      "name": "Transactions",
      "description": "User Transactions API"
    }
  ],
  "paths": {
    "/user/accounts" : {
      "get" :{
        "tags": [
          "Accounts"
        ],
        "summary": "Fetch all user's accounts",
        "operationId": "getAccounts",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "description": "Attach Bearer JWT token",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Return user's accounts",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccountsResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid Fields"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/user/accounts/{accountId}/transactions" : {
      "get" :{
        "tags": [
          "Transactions"
        ],
        "summary": "Fetch all transactions associated with a specific account",
        "operationId": "getTransactions",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "description": "Attach Bearer JWT token",
            "required": true
          },
          {
            "in": "path",
            "name": "accountId",
            "description": "ID of a specific account",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Return transactions",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TransactionsResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid Fields"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/user/accounts/{accountId}/transactions/{transactionID}" : {
      "put" :{
        "tags": [
          "Transactions"
        ],
        "summary": "Update the information of a specific transaction already existing",
        "operationId": "putTransaction",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "description": "Attach Bearer JWT token",
            "required": true
          },
          {
            "in": "path",
            "name": "accountId",
            "description": "ID of a specific account",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "path",
            "name": "transactionID",
            "description": "ID of the transaction",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "Update user transaction attributes",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateTransactionResponse"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User transaction updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UpdateTransactionResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid Fields"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas" : {
      "AccountsResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          },
          "body": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "name": {
                "type": "string"
              },
              "balance": {
                "type": "string"
              }
            }
          }
        }
      },
      "TransactionsResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          },
          "body": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "date": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "amount": {
                "type": "number"
              },
              "balance": {
                "type": "number"
              },
              "transactionType": {
                "type": "string"
              },
              "category": {
                "type": "string"
              },
              "notes": {
                "type": "string"
              }
            }
          }
        },
        "example": [
          {
            "id": 1,
            "date": "2020-06-20",
            "description": "Golden Sun Bakery",
            "amount": 5.00,
            "balance": 2082.79,
            "transactionType": "Electronic",
            "category": "Food",
            "notes": "Onions make the milk taste bad"
          },
          {
            "id": 2,
            "date": "2020-06-20",
            "description": "Golden Sun Bakery",
            "amount": 10.00,
            "balance": 2087.79,
            "transactionType": "Electronic",
            "category": "Food",
            "notes": "Garlic makes the butter smell strange"
          }
        ]
      },
      "UpdateTransaction": {
        "type": "object",
        "properties": {
          "category": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        }
      },
      "UpdateTransactionResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  } 
}