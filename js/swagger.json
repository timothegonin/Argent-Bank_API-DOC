{
  "openapi": "3.1.0",
  "info": {
    "title": "Argent Bank API documentation",
    "description": "Contains all available API endpoints in this codebase",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "localhost:3001/api/v1"
    }
  ],
  "tags": [
    {
      "name": "Accounts",
      "description": "User Accounts API"
    },
    {
      "name": "Transactions",
      "description": "User Transactions API"
    }
  ],
  "paths": {
    "/user/accounts" : {
      "get" :{
        "tags": [
          "Accounts"
        ],
        "summary": "Fetch all user's accounts",
        "operationId": "getAccounts",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "description": "Attach Bearer JWT token",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Return user's accounts",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ArrayOfAccounts"
                }
              }
            }
          },
          "400": {
            "description": "Invalid Fields"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/user/transactions" : {
      "get" :{
        "tags": [
          "Transactions"
        ],
        "summary": "Fetch all transactions made by the user for the current month",
        "operationId": "getTransactions",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "description": "Attach Bearer JWT token",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Return transactions",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ArrayOfTransactions"
                }
              }
            }
          },
          "400": {
            "description": "Invalid Fields"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/user/transaction/{transactionID}" : {
      "put" :{
        "tags": [
          "Transactions"
        ],
        "summary": "Updates information for an existing transaction",
        "operationId": "putTransaction",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "description": "Attach Bearer JWT token",
            "required": true
          },
          {
            "in": "path",
            "name": "transactionID",
            "description": "ID of the transaction",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User transaction updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UpdatedTransaction"
                }
              }
            }
          },
          "400": {
            "description": "Invalid Fields"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas" : {
      "Accounts" : {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "balance": {
            "type": "string"
          }
        }
      },
      "ArrayOfAccounts": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Accounts"
        },
        "example": [
          {
            "id": 1,
            "name": "Argent Bank Checking (x8349)",
            "balance": 2082.79
          },
          {
            "id": 2,
            "name": "Argent Bank Savings (x67124)",
            "balance": 10928.42
          }
        ]
      },
      "Transactions" : {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "date": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "amount": {
            "type": "number"
          },
          "balance": {
            "type": "number"
          },
          "transactionType": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        }
      },
      "ArrayOfTransactions": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Transactions"
        },
        "example": [
          {
            "id": 1,
            "date": "2020-06-20",
            "description": "Golden Sun Bakery",
            "amount": 5.00,
            "balance": 2082.79,
            "transactionType": "Electronic",
            "category": "Food",
            "notes": "Onions make the milk taste bad"
          },
          {
            "id": 2,
            "date": "2020-06-20",
            "description": "Golden Sun Bakery",
            "amount": 10.00,
            "balance": 2087.79,
            "transactionType": "Electronic",
            "category": "Food",
            "notes": "Garlic makes the butter smell strange"
          }
        ]
      },
      "UpdateTransactions": {
        "type": "object",
        "properties": {
          "category": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  } 
}